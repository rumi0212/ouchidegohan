<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col">
            <h2 class="text-center">カテゴリ編集</h2>
        </div>
    </div>

    <div class="row mt-4">
      <div class="col-1"></div>
        <div class="col-5">
          <%= form_with model: @category,url: admin_category_path, method: :patch, local: true do |f| %>
          <%= f.label "カテゴリ名", class: "ms-5" %>
          <%= f.text_field :name, class: "ms-5" %>
          <%=f.submit "変更を保存", class:"btn btn-success ms-5 fs-5" %>
          <% end %>
        </div>
    </div>
</div>