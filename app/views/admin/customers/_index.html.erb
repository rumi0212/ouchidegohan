<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>ニックネーム</th>
      <th>メールアドレス</th>
      <th>会員ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td class="info col-xs-1">
          <%= customer.id %>
        </td>
        <td class="text-left">
          <%= link_to customer.name,admin_customer_path(customer) %>
        </td>
        <td class="text-left">
          <%= customer.email %>
        </td>
        <td class="col-xs-2">
          <% if customer.is_deleted == true %>
          <p class="text-secondary">退会</p>
          <% else %>
          <p class="text-success">有効</p>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>