<div class="container">
  <h2 class="text-center m-5"><%= @customer.name %>さんの会員情報編集</h2>
  <div class="row d-flex justify-content-center">

  <%= form_with model: @customer, url: admin_customer_path, method: :patch, local: true do |f| %>
    
      <div class="form-group row">
        <%= f.label :"会員ID", class: "col-sm-6" %>
        <%= f.label :"#{@customer.id}" %>
      </div>
      <div class="form-group row">
        <%= f.label :"ニックネーム", class: "col-sm-6 control-label" %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group row">
        <%= f.label :"メールアドレス", class: "col-sm-6 control-label" %>
        <%= f.text_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :"会員ステータス", class: "form_label my-3" %>
        　<%= f.radio_button :is_deleted, false %>
        　<%= f.label :is_deleted, "有効",class:"form_label"%>
        　<%= f.radio_button :is_deleted, true %>
        　<%= f.label :is_deleted, "退会",class:"form_label" %>
      </div>
    
      <div class="form-group col-xs-9 d-flex justify-content-around">
        <%= f.submit '変更を保存する' ,class: "btn btn-success mb-5" %>
      </div>

  <% end %>

  </div>
</div>