<div class="container">
  <h2 class="mt-5 text-center"><%= @customer.name %>さんの会員詳細</h2>
    <div class="row m-5">
      <div class="col-10 offset-1">
          <table class="table">
            <tr>
              <th class="text-center">会員ID</th>
              <td><%= @customer.id%></td>
            </tr>
            <tr>
              <th class="text-center">ニックネーム</th>
              <td><%= @customer.name %></td>
            </tr>
            
            <tr>
              <th class="text-center">メールアドレス</th>
              <td><%= @customer.email%></td>
            </tr>
            <tr>
              <th class="text-center">会員ステータス</th>
              <% if @customer.is_deleted == true %>
               <td class="text-secondary">退会</td>
              <% else %>
               <td class="text-success">有効</td>
              <% end %>
            </tr>
          </table>
          <div class="d-flex justify-content-around">
            <p><%= link_to "編集する",edit_admin_customer_path, class:"btn btn-success"%></p>
          </div>
   　　 </div>
  　</div>
 </div>