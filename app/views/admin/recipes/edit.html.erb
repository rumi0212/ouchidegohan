<div class="container">
  <h2 class="text-center my-5">レシピ編集</h2>
  <div class="row">
    <div class="col-8 offset-2 mb-5">
      <%= form_with model: @recipe, url: admin_recipe_path, local: true do |f| %>
      <table>
        <tr>
          <div class="form-group">
            <%= f.label :料理写真, class:"form_label"%>
            <%= f.file_field :image, accept: "image/*",class:"mb-3 ml-3"%>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :レシピのタイトル, class:"form_label" %>
            <%= f.text_field :name, class:"form-control mb-3" %>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <%= f.label :カテゴリ, class:"form_label" %>
            <%= f.collection_select :category_id, Category.all, :id, :name, :prompt => "--選択してください--",class:"form-select" %>
          </div>
        </tr>
        <!------------ 材料登録 -------------->
        <tr>
          <div class="form-group">
            <%= f.label :材料,class:"form_label" %>
            <%= f.text_field :serving,size:"15", class:"form-control mb-3" %>
          </div>

          <div class="row">
            <table class="table table-borderless mb-0" id="ingredient-table">
              <thead>
                <th><h4 class="mx-auto mt-3">食材・調味料</h4></th>
              </thead>
              <tbody>
                <%= f.fields_for :ingredients do |ingredient| %>
                <%= render partial: "admin/recipes/ingredient_fields", locals: { f: ingredient }%>
                <% end %>
              <tr id="detail-association-ingredient-insertion-point"><td></td></tr>
              <tr>
                <td class="links col-md-2">
                  <%= link_to_add_association "+材料を追加", f, :ingredients,
                    class: "btn btn-primary btn-block",
                    data: {
                      association_insertion_node: '#detail-association-ingredient-insertion-point',
                      association_insertion_method: 'after'

                    }
                  %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!------------ 作成手順 -------------->
        <div class="row">
          <h4 class="col-2 mt-4">作り方</h4>
        </div>

        <div class="row">

          <table class="table table-borderless" id="procedure-table">
            <%= f.fields_for :procedures do |procedure| %>
              <%= render partial: "admin/recipes/procedure_fields", locals: { f: procedure }%>
            <% end %>
            <tr id="detail-association-procedure-insertion-point"><td></td></tr>
            <tr>
              <td class="links col-md-2">
                <%= link_to_add_association "+作り方を追加", f, :procedures,
                  class: "btn btn-primary btn-block",
                  data: {
                  association_insertion_node: '#detail-association-procedure-insertion-point',
                  association_insertion_method: 'after'
                }%>
              </td>
            </tr>
          </table>
        </div>


          <div class="form-group">
            <%= f.label :コツ・ポイント,class:"form_label" %>
            <%= f.text_area :comment, size: "50x5", class:"form-control form-control-lg mt-5"%>
          </div>
        </tr>

        <tr>
        <div class="form-group">
          <%= f.label :公開ステータス,class:"form_label my-3" %>
          <%= f.radio_button :status, true, checked: true %>
            <%= f.label :status, "公開中",class:"form_label" %>
            <%= f.radio_button :status, false %>
            <%= f.label :status, "非公開",class:"form_label" %>
          </td>
        </div>
        </tr>
        <tr>
        <div class="form-action d-flex justify-content-around">
          <%= f.submit "変更を保存", class:"btn btn-success" %>
        </div>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>