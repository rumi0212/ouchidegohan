<div class="container">
  <h2 class="mt-5 text-center">レシピ詳細</h2>
    <div class="row align-items-center m-5">
      <div class="col-lg text-center mb-5">
        <%= image_tag @recipe.image, format: 'jpeg', fallback: "no_image.jpeg",size:"350x250" %>
      </div>
      <div class="col-lg">
          <table class="table">
            <tr>
              <th>レシピ名</th>
              <td><%= @recipe.name %></td>
            </tr>
            <tr>
              <th>カテゴリ</th>
              <td><%= @recipe.category.name %></td>
            </tr>
            <tr>
              <th>材料</th>
            </tr>
            <tr>
              <th>商品説明</th>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <th>
                  税込価格<br>
                  (税抜き価格)
              </th>
              <td><%= (@item.price*1.1).to_i %> (<%= @item.price %>) 円</td>
            </tr>
            <tr>
              <th>販売ステータス</th>
                <td>
                     <% if @item.is_active == true %>
                        <p class="text-success ">販売中</p>
                     <% else %>
                        <p class="text-secondary ">販売停止中</p>
                     <% end %>
                </td>
            </tr>
          </table>
          <div class="d-flex justify-content-around">
            <p><%= link_to '編集する', edit_admin_item_path(@item.id), class: 'btn btn-success' %></p>
          </div>
   　　 </div>
  　</div>
 </div>