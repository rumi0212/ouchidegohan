<div class="container">
  <div class="mt-5">
    <h2 class="mb-4 text-center text-color rounded-pill pb-2 pt-2"><%= @store.store_name %>さんの店舗詳細</h2>
  </div>

  <div class="row align-items-center m-5">
    <div class="col-lg text-center mb-3">
      <%= image_tag @store.get_image(350,250) %>
    </div>
  </div>

  <div class="row m-5">
    <div class="col-10 offset-3">
      <table class="table table-bordered", style="width: 70%">
        <tbody>
          <tr>
            <td class="col-2 bg-light">店舗ID</td>
            <td><%= @store.id%></td>
          </tr>
          <tr>
            <td class="bg-light">店名</td>
            <td><%= @store.store_name %></td>
          </tr>
          <tr>
            <td class="bg-light">紹介文</td>
            <td><%= @store.introduction %></td>
          </tr>
          <tr>
            <td class="bg-light">カテゴリ</td>
            <td><%= @store.category.name %></td>
          </tr>
          <tr>
            <td class="bg-light">住所</td>
            <td><%= @store.address %></td>
          </tr>
          <tr>
            <td class="bg-light">電話番号</td>
            <td><%= @store.telephone_number %></td>
          </tr>
          <tr>
            <td class="bg-light">営業時間</td>
            <td><%= @store.opening_hour %></td>
          </tr>
        </tbody>
      </table>
      <div class="row mt-5">
    　　<p><%= link_to "店舗情報を編集する", edit_admin_store_path, class: "btn btn-success" %></p>
  　　</div>
  　　<div class="row mt-1">
    　　<p>  <%= link_to "店舗のレシピ一覧を見る", recipes_admin_store_path(@store), class: "btn btn-warning" %></p>
  　　</div>
  　　<div class="row mb-1">
    　　<p><%= link_to "レシピを投稿する", new_admin_store_recipe_path(@store), class: "btn btn-primary" %></p>
  　　</div>
    </div>
  </div>
</div>