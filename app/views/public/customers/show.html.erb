<div class="container">

  <div class="mt-5">
    <h2 class="mb-4 cart-color col-3 text-center text-color rounded-pill pb-2 pt-2">マイページ</h2>
  </div>

  <div class="row mt-4">
    <span class="fst-italic fs-5 col-2">登録情報</span>
    <%= link_to "編集する", edit_customers_path, class: "btn btn-sm btn-success col-2 mb-5" %>
  </div>

  <table class="table table-bordered", style="width: 70%">
    <tbody>
      <tr>
        <td class="col-2 bg-light">ニックネーム</td>
        <td><%= @customer.name %></td>
      </tr>
      
      <tr>
        <td class="bg-light">メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>

  <div class="row mt-5">
    <span class="fst-italic fs-5 col-2">配送先</span>
    <%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary col-2" %>
  </div>

  <div class="row mt-3 mb-4">
    <span class="fst-italic fs-5 col-2">注文履歴</span>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary col-2" %>
  </div>
</div>