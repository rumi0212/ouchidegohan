<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-7'>

    </div>
    <div class='col-md-11 offset-md-1'>
      <div class="recipe_new">
        <div class="recipe_photo">
          <%= image_tag @recipe.image, format: 'jpg', fallback: "no_image.jpe
g",size:"300x200" %>
        </div>
        <div class="item_text">
          <h2><%= @recipe.title %></h2>
        </div>

        <div class='row'>
          <table class="table table-borderless mx-auto">
            <thead class="border-bottom">
              <th class="d-flex pb-0 mb-2">
                <h5>材料</h5>
                <p>（<%= @recipe.serving %>人前）</p>
              </th>
            </thead>
            <tbody>
              <% @recipe.ingredients.each do |ingredient| %>
              <tr>
                <td><%= ingredient.name %></td>
                <td><%= ingredient.amount %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="row mx-auto mt-5">
          <table class="table table-borderless mx-auto">
            <thead class="page-heading-pink">
              <th colspan="2" class="py-1">
                <h5>作り方</h5>
              </th>
            </thead>
            <tbody>
              <% step_num = 0 %>
              <% @recipe.procedures.each do |procedure| %>
              <tr class="ml-2">
                <td><%= step_num += 1 %>)</td>
                <td><%= @procedure.body %></td>
              </tr>
              <% end %>
            </tbody>
         </table>
        </div>

        <div class="row mt-4 mb-3">
          <5>コツ・ポイント</5>
          <p class="mx-auto text-wrap text-center px-3"><%= @recipe.comment %></p>
        </div>

        <div>
          <% if @recipe.favorited_by?(current_customer) %>
            <p>
              <%= link_to recipe_favorites_path(@recipe), method: :delete do %>
              ♥<%= @recipe.favorites.count %>
              <% end %>
            </p>
          <% else %>
            <p>
              <%= link_to recipe_favorites_path(@recipe), method: :post do %>
              ♡<%= @recipe.favorites.count %>
              <% end %>
            </p>
          <% end %>
        </div>

        <div class="row mt-5">
          <div class="mx-auto">
            <h5>コメント件数：<%= @recipe.post_comments.count %></h5>
            <% @recipe.post_comments.each do |post_comment| %>
              <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
              <% if post_comment.user == current_user %>
                <%= link_to "削除", recipe_post_comment_path(post_comment.recipe, post_comment), method: :delete %>
              <% end %>
            <% end %>
          </div>

          <div>
            <%= form_with model: [@recipe, @post_comment] do |f| %>
              <%= f.text_text :comment, rows: '5', placeholder: "コメントをここに" %>
              <%= f.submit "送信する" %>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>