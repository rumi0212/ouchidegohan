<h2 style="text-align:center"><strong>新規アカウント登録</strong></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:"rounded", autofocus: true, placeholder:"ニックネーム" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"rounded", autofocus: true, placeholder:"メールアドレス", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"rounded", autofocus: true, placeholder:"パスワード（6文字以上）" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"rounded", autofocus: true, placeholder:"パスワード（確認用）" %>
  </div>

  <div class="actions">
    <%= f.submit "アカウント登録", class:"btn btn-success offset-3 mt-4" %>
  </div>
<% end %>

