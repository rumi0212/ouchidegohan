<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">

    <h2 style="text-align:center"><strong>新規アカウント登録</strong></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
  
      <div class="field my-2">
        <%= f.label :name %><br />
        <%= f.text_field :name, class:"rounded", autofocus: true, placeholder:"ニックネーム" %>
      </div>

      <div class="field my-2">
        <%= f.label :email %><br />
        <%= f.email_field :email, class:"rounded", autofocus: true, placeholder:"メールアドレス", autocomplete: "email" %>
      </div>

      <div class="field my-2">
        <%= f.label "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"rounded", autofocus: true, placeholder:"6文字以上" %>
      </div>

      <div class="field my-2">
        <%= f.label "パスワード（確認用）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"rounded", autofocus: true %>
      </div>
      

      <div class="actions">
        <%= f.submit "アカウント登録", class:"btn btn-success offset-3 mt-4" %>
      </div>
    <% end %>

    </div>
  </div>
</div>

