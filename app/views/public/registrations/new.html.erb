<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">

    <h2 class="text-dark bg-light py-4 mb-0"><strong>新規アカウント登録</strong></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
  
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
        </div>
        <%= f.text_field :name, class:"form-control", autofocus: true, id:"inputName", placeholder:"ニックネーム" %>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
        </div>
        <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス" %>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" aria-hidden="true"><i class="fas fa-check-circle"></i></span>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"inputConfirmPassword", placeholder:"パスワード確認" %>
      </div>
      

      <div class="actions mb-3">
        <%= f.submit "アカウント登録", class:"btn btn-bloc btn-success mt-3" %>
      </div>
    <% end %>

    </div>
  </div>
</div>

