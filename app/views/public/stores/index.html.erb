<div class="container">
  <div class="row">
    <div class="col-sm-12 px-sm-0">
      <h2 class="mb-4 text-center text-color rounded-pill pb-2 pt-2"><%= @category.name %>の店舗一覧</h2>
    </div>
  </div>
  <div class="row mt-3 mb-3 text-center text-xs-center text-sm-center text-md-left">
      <% @stores.each do |store| %>
      <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3 border">
       <div class="card w-100 bg-transparent border-0" style="width: 18rem;">
        <%= link_to store_path(store.id) do %>
          <div class="row">
            <div class="col mt-3">
              <p class="img-wrap"><%= image_tag store.image, format: 'jpg', fallback: "no_image.jpg", size: "180x130", class: "mx-auto d-block" %></p>
            </div>
          </div>
        
        <div class="card-body">
          <p class="item-details item-name card-text"><strong><%= store.store_name %></p></strong>
        <% end %>
          <p class="item-details item-name card-text"><%= store.introduction %></p>
          <div class="input-group-prepend">
            <span><i class="fa-solid fa-house"></i></span>
            <p class="item-details item-name card-text"><%= store.address %></p>
          </div>
          <div class="input-group-prepend">
            <span><i class="fa-solid fa-phone"></i></span>
            <p class="item-details item-name card-text"><%= store.telephone_number %></p>
          </div>
          <div class="input-group-prepend">
            <span><i class="fa-solid fa-clock"></i></span>
            <p class="item-details item-name card-text"><%= store.opening_hour %></p>
          </div>
        </div>
      </div>
    </div>
      <% end %>
  </div>
      <%= paginate(@stores) %>
</div>